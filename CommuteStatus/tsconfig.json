{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./dist",
    "lib": [
      "es5",
      "es2015"
    ],
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "src/test/**/*"
  ],
  "include": [
    "src/**/*"
  ],
  "typeRoots": [
    "./node_modules/@types"
  ]
}